<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.morning.star.dao.CategoryDAO">
    <resultMap id="TohomeMap" type="com.morning.star.bean.RetailCategory">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="level" property="level" jdbcType="INTEGER"/>
        <result column="name" property="categoryName" jdbcType="VARCHAR"/>
        <result column="parent" property="parentId" jdbcType="INTEGER"/>
    </resultMap>

    <select id="selectAll" resultMap="TohomeMap">
        SELECT * FROM tohome.th_base_category
    </select>

    <insert id="addCategory" parameterType="com.morning.star.bean.RetailCategory"
            useGeneratedKeys="true" keyProperty="id">
        use `retail_base_info`;
        insert into retail_category(id,level,parent_id,category_name,sort,company_code,create_time,modify_time,operator_id,operator_name)
        values (#{id},#{level},#{parentId},#{categoryName},#{sort},#{companyCode},now(),now(), #{operatorId},#{operatorName})
    </insert>

</mapper>