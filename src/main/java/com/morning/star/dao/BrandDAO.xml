<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.morning.star.dao.BrandDAO">
    <resultMap id="TohomeMap" type="com.morning.star.bean.RetailBrand">
        <id column="brandId" property="id" jdbcType="BIGINT"/>
        <result column="brandNameCh" property="brandName" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectAll" resultMap="TohomeMap">
        SELECT * FROM tohome.th_brand
    </select>

    <select id="getInfo" resultMap="TohomeMap">
        SELECT * FROM tohome.th_brand WHERE brandId = ${id}
    </select>

    <insert id="addBrand" useGeneratedKeys="true" keyProperty="id">
        use `retail_base_info`;
        insert into retail_brand (id,brand_name, company_code, create_time,modify_time, operator_id,operator_name)
        values (#{id},#{brandName},#{companyCode},now(),now(),#{operatorId}, #{operatorName})
    </insert>

</mapper>